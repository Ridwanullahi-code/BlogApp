<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="w-full h-screen  flex flex-col justify-center bg-blue-500 px-5 md:px-0">
    <div class="bg-white p-10 w-full md:w-1/2 flex flex-col gap-4 mx-auto">
      <h2 class="text-3xl font-bold text-center">Sign Up</h2>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'w-full rounded-sm' %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'w-full rounded-sm' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:'w-full rounded-sm' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:'w-full rounded-sm' %>
      </div>

      <div class="field w-full">
        <%= f.label :role %><br>
        <%= f.select :role, ["Author", "Admin"], selected: "Author" , class:'w-full rounded-sm'%>
      </div>

      <div class="actions text-center">
        <%= f.submit "Sign up",class: "hover:bg-blue-800 duration-90 bg-blue-700 border-blue-700 p-2 px-4 text-white rounded-sm" %>
      </div>
      <%= link_to 'Login', new_user_session_path, class:'text-center mt-4 text-blue-600 hover:text-blue-800 active:text-blue-900' %>
    </div>
  </div>
<% end %>
