<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<div class="w-full h-screen  flex flex-col justify-center bg-blue-500 px-5 md:px-0">
  <div class="bg-white p-10 w-full md:w-1/2 flex flex-col gap-4 mx-auto">
    <h2 class="text-3xl font-bold text-center">Sign in</h2>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'w-full rounded-sm' %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:'w-full rounded-sm' %>
    </div>
    
    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>
    <%= link_to 'Forgot password', new_user_password_path, class:'text-blue-600 hover:text-blue-800 active:text-blue-900' %>
    <div class="actions text-center">
      <%= f.submit "Login",class: "hover:bg-blue-800 duration-90 bg-blue-700 border-blue-700 p-2 px-4 text-white rounded-sm" %>
    </div>
    <%= link_to 'Sign up', new_user_registration_path, class:'text-center mt-4 text-blue-600 hover:text-blue-800 active:text-blue-900' %>
  </div>
</div>
<% end %>
<%= render "devise/shared/links" %>
