<section class="h-screen flex  flex-col justify-center items-center">
	<% if @post.errors.any? %>
	<div>
		<% @post.errors.full_messages.each do |message| %>
		<p><%= message %></p>
		<% end %>
	</div>
	<% end %>
	<div class="flex flex-col gap-5 items-baseline justify-start ">
		<h4>Add your message here:</h4>
		<%= form_for [@user, @post], url:  user_posts_path(current_user), locale: true, method: :post do |form| %>
		<div class="flex flex-col mb-3">
			<label>Title</label>
			<%= form.text_field :title, required: true, autofocus: true, class: "border border-gray-200 rounded-sm p-2" %>
		</div>
		<div class="flex flex-col mb-3">
			<label>Message</label>
			<%= form.text_area :text, required: true, autofocus: true, class: "form-input" %>
		</div>

		<%= form.hidden_field :user_id, value: current_user.id %>
		<%= content_tag :div , class: "flex justify-center gap-3" do %>
		<button
			class="text-white bg-blue-700 hover:bg-blue-800 active:bg-blue-900 p-3 px-5 rounded-sm"><%= link_to "Cancel", user_posts_path(current_user) %></button>
		<%= form.submit "Save Post", class: "text-white bg-blue-700 hover:bg-blue-800 active:bg-blue-900 p-3 px-5 rounded-sm" %>
		<% end %>
		<% end %>
	</div>
</section>