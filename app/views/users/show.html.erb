<%= render "shared/nav" %>
<section class="flex gap-3 flex-col border border-gray-200 mx-2 px-3 pb-5">
	<%= render 'shared/user', user: @user %>
	<div class="flex gap-3 flex-col">	
		<div class="border border-gray-100 p-3 mx-5">
			<h2 class="text-2xl font-bold">Bio</h2>
			<p><%= @user.bio %></p>
		</div>
		<% @user.most_recent_posts.each do |post| %>
		 <%= render 'shared/post', post:post %>
		<%end %>
	</div>
	<div class="text-center">
		<button class="text-white bg-blue-700 hover:bg-blue-800 active:bg-blue-900 p-3 px-5 rounded-sm"><%= link_to "see all posts", user_posts_path(@user) %></button>
	</div>
</section>