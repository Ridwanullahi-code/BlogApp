<div class="flex h-48 items-center p-10 gap-4 border border-gray-200 mx-5 mt-3">
	<div class="h-32 w-32">
		<img class="w-full h-full" src="<%= user.photo %>" alt= <%= user.name %> >
	</div>
	<div class="border border-gray-200 flex-1 flex justify-center p-2 px-5 h-32 flex-col" >
		<h2 class="text-3xl font-bold hover:text-blue-700 active:text-blue-800 duration-75"><%= link_to user.name, user_path(user), class: "user_link" %></h2>
	  <p class="font-medium text-right mt-3"><%= "Number of posts: #{ user.posts_counter || 0}" %></p>
	</div>
</div>